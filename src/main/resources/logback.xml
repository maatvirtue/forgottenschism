<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
	<appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %-5level [%-20thread] [%-20class{0}] - %-75message @%logger %n</pattern>
		</encoder>
	</appender>

	<!-- Package level logging -->
	<logger name="net.forgottenschism">
		<level value="debug" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="consoleLog" />
	</root>
</configuration>
